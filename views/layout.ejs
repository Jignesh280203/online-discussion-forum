<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title><%= title || "ColorForum - Dark" %></title>

  <!-- Tailwind -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- AOS -->
  <link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet">

  <!-- Feather icons -->
  <script src="https://unpkg.com/feather-icons"></script>

  <style>
    :root{
      --bg: #0b1020;         /* page background */
      --card: #0f1724;       /* card background */
      --muted: #94a3b8;      /* muted text */
      --text: #e6eef8;       /* main text */
      --accent-1: #8b5cf6;   /* purple */
      --accent-2: #3b82f6;   /* blue */
      --accent-3: #22c55e;   /* green */
      --danger: #ef4444;     /* red */
    }
    body { background: var(--bg); color: var(--text); }
    .card { background: var(--card); }
    a { color: var(--accent-2); }
    .accent { background: linear-gradient(90deg,var(--accent-1),var(--accent-2)); color: white; }
    /* small tweaks */
    .glass { background: rgba(255,255,255,0.03); border: 1px solid rgba(255,255,255,0.03); }
    .muted { color: var(--muted); }
  </style>
</head>
<body class="min-h-screen antialiased">

  <!-- NAVBAR -->
  <nav class="flex items-center justify-between px-6 py-3 accent shadow-sm">
    <div class="flex items-center gap-3">
      <div class="text-2xl">ğŸ’¬</div>
      <a href="/" class="font-bold text-lg">ColorForum</a>
    </div>

    <div class="flex items-center gap-4">
      <a href="/categories" class="hidden md:inline text-white/90 hover:underline">Categories</a>
      <a href="/threads" class="hidden md:inline text-white/90 hover:underline">Threads</a>

      <% if (currentUser) { %>
        <div class="relative">
          <button id="profileBtn" class="flex items-center gap-2 bg-white/10 px-3 py-1 rounded">
            <span class="w-8 h-8 rounded-full bg-white text-accent-1 flex items-center justify-center font-bold">
              <%= currentUser.username ? currentUser.username[0].toUpperCase() : "U" %>
            </span>
            <div class="hidden sm:block text-left">
              <div class="text-sm font-semibold"><%= currentUser.username %></div>
              <div class="text-xs muted"><%= currentUser.role %></div>
            </div>
            <i data-feather="chevron-down" class="text-white"></i>
          </button>

          <div id="profileDropdown" class="hidden absolute right-0 mt-2 w-48 bg-card text-white rounded shadow p-2">
            <a href="/profile" class="block px-3 py-2 hover:bg-white/5 rounded">My Profile</a>
            <a href="/notifications" class="block px-3 py-2 hover:bg-white/5 rounded">Notifications</a>
            <% if (currentUser && (currentUser.role === 'moderator' || currentUser.role === 'admin')) { %>
              <a href="/categories" class="block px-3 py-2 hover:bg-white/5 rounded">Manage Categories</a>
            <% } %>
            <% if (currentUser && currentUser.role === 'admin') { %>
              <a href="/admin" class="block px-3 py-2 hover:bg-white/5 rounded text-red-400">Admin Panel</a>
            <% } %>
            <a href="/logout" class="block px-3 py-2 hover:bg-white/5 rounded">Logout</a>
          </div>
        </div>
      <% } else { %>
        <a href="/login" class="text-white/90 hover:underline">Login</a>
        <a href="/register" class="ml-3 text-white/90 hover:underline">Register</a>
      <% } %>
    </div>
  </nav>

  <div class="flex">
    <!-- SIDEBAR (solid dark) -->
    <aside class="hidden md:block w-64 p-6 bg-[#071028] border-r border-r-white/5 h-screen sticky top-0">
      <div class="mb-6">
        <h3 class="text-sm font-semibold muted">Quick Links</h3>
      </div>
      <nav class="space-y-2">
        <a href="/" class="block p-2 rounded hover:bg-white/3">ğŸ  Home</a>
        <a href="/threads" class="block p-2 rounded hover:bg-white/3">ğŸ’¬ Threads</a>
        <a href="/categories" class="block p-2 rounded hover:bg-white/3">ğŸ“‚ Categories</a>
        <a href="/notifications" class="block p-2 rounded hover:bg-white/3">ğŸ”” Notifications</a>
        <a href="/profile" class="block p-2 rounded hover:bg-white/3">ğŸ‘¤ Profile</a>
        <% if (currentUser && currentUser.role === 'admin') { %>
          <a href="/admin" class="block p-2 mt-2 rounded hover:bg-white/3 text-red-400">ğŸ›  Admin</a>
        <% } %>
      </nav>
    </aside>

    <!-- MAIN -->
    <main class="flex-1 p-6 min-h-screen">
      <div data-aos="fade-up">
        <%- typeof body !== "undefined" ? body : "" %>
      </div>
    </main>
  </div>

  <!-- FOOTER -->
  <footer class="text-center py-6 bg-transparent mt-6 border-t border-t-white/5">
    <p class="text-sm muted">Â© <%= new Date().getFullYear() %> ColorForum â€¢ Built by You</p>
  </footer>

  <script>feather.replace();</script>
  <script src="https://unpkg.com/aos@2.3.4/dist/aos.js"></script>
  <script>AOS.init({ once:true, duration:650 });</script>

  <script>
    // profile dropdown toggle
    document.addEventListener('click', function(e){
      const btn = document.getElementById('profileBtn');
      const dd = document.getElementById('profileDropdown');
      if (!btn) return;
      if (btn.contains(e.target)) dd.classList.toggle('hidden');
      else if (dd && !dd.contains(e.target)) dd.classList.add('hidden');
    });
  </script>

  <script src="/js/main.js" defer></script>
</body>
</html>
