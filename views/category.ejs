<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Categories</title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    body {
      font-family: "Segoe UI", Arial, sans-serif;
      background-color: #f4f6f8;
      margin: 0;
      padding: 0;
    }

    header {
      background: linear-gradient(90deg, #007bff, #0056b3);
      color: white;
      padding: 15px;
      text-align: center;
      border-radius: 8px;
      margin: 10px;
      box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
    }

    section {
      margin: 20px auto;
      width: 90%;
      max-width: 800px;
      background: #fff;
      padding: 15px 20px;
      border-radius: 10px;
      box-shadow: 0 3px 6px rgba(0, 0, 0, 0.05);
    }

    form {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
    }

    form input, form button {
      padding: 8px;
      margin: 5px 0;
      width: 100%;
      max-width: 400px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }

    form button {
      background-color: #007bff;
      color: white;
      border: none;
      cursor: pointer;
      transition: background 0.3s ease;
    }

    form button:hover {
      background-color: #0056b3;
    }

    ul {
      list-style-type: none;
      padding: 0;
    }

    li {
      background: white;
      padding: 12px;
      border: 1px solid #ddd;
      border-radius: 8px;
      margin-bottom: 10px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      transition: transform 0.2s;
    }

    li:hover {
      transform: scale(1.01);
    }

    a.delete-btn {
      color: red;
      text-decoration: none;
      font-weight: bold;
      transition: color 0.3s;
    }

    a.delete-btn:hover {
      color: #b30000;
      text-decoration: underline;
    }

    .flash-success {
      background-color: #d4edda;
      color: #155724;
      padding: 10px;
      border: 1px solid #c3e6cb;
      border-radius: 5px;
      text-align: center;
      margin: 10px auto;
      width: 80%;
      max-width: 700px;
    }

    .flash-error {
      background-color: #f8d7da;
      color: #721c24;
      padding: 10px;
      border: 1px solid #f5c6cb;
      border-radius: 5px;
      text-align: center;
      margin: 10px auto;
      width: 80%;
      max-width: 700px;
    }

    @media (max-width: 600px) {
      section {
        width: 95%;
        padding: 10px;
      }
      form input, form button {
        width: 100%;
      }
    }
  </style>
</head>
<body>
  <header>
    <h1>Discussion Categories üóÇÔ∏è</h1>
  
    <% if (currentUser) { %>
      <p>üëã Welcome, <strong><%= currentUser.username %></strong> 
      (<%= currentUser.role %>) 
      | <a href="/logout" style="color:white; text-decoration:underline;">Logout</a>
      </p>
    <% } else { %>
      <p><a href="/login" style="color:white;">Login</a> | 
         <a href="/register" style="color:white;">Register</a></p>
    <% } %>
  </header>

  <!-- ‚úÖ Flash Messages -->
  <% if (success_msg) { %>
    <div class="flash-success"><%= success_msg %></div>
  <% } %>
  <% if (error_msg) { %>
    <div class="flash-error"><%= error_msg %></div>
  <% } %>

  <section>
    <h3>Create a New Category</h3>
    <form action="/categories" method="POST">
      <input type="text" name="name" placeholder="Category Name" required>
      <input type="text" name="description" placeholder="Description" required>
      <button type="submit">Add Category</button>
    </form>
  </section>

  <section>
    <h3>Available Categories</h3>
    <% if (categories.length === 0) { %>
      <p>No categories yet. Create one above!</p>
    <% } else { %>
      <ul>
        <% categories.forEach(cat => { %>
          <li>
            <div>
              <a href="/categories/<%= cat._id %>" style="text-decoration:none; color:#007bff;">
                <strong><%= cat.name %></strong>
              </a>
              ‚Äî <%= cat.description %>
            </div>

            <% if (currentUser && (currentUser.role === "moderator" || currentUser.role === "admin")) { %>
              <a href="/categories/<%= cat._id %>/delete"
                 class="delete-btn"
                 onclick="return confirm('Are you sure you want to delete this category and all its threads?');">
                üóëÔ∏è Delete
              </a>
            <% } %>
          </li>
        <% }) %>
      </ul>
    <% } %>
  </section>
</body>
</html>
