<%- include('layout', { body: `
<div class="max-w-md mx-auto mt-16">

  <div class="bg-white p-8 rounded-2xl shadow-xl" data-aos="fade-up">
    <h1 class="text-3xl font-bold text-center text-slate-800 mb-6">Create Account âœ¨</h1>

    <form action="/register" method="POST" class="space-y-4">

      <div>
        <label class="text-sm font-semibold">Username</label>
        <input 
          type="text" 
          name="username"
          required 
          class="w-full p-3 border rounded-lg"
          placeholder="Choose a username">
      </div>

      <div>
        <label class="text-sm font-semibold">Email</label>
        <input 
          type="email" 
          name="email"
          required 
          class="w-full p-3 border rounded-lg"
          placeholder="Enter your email">
      </div>

      <div>
        <label class="text-sm font-semibold">Password</label>
        <input 
          type="password" 
          name="password"
          required 
          class="w-full p-3 border rounded-lg"
          placeholder="Create a password">
      </div>

      <button class="w-full py-3 bg-accent-1 text-white rounded-xl font-semibold shadow-lg">
        Create Account
      </button>

    </form>

    <p class="mt-5 text-center text-slate-600 text-sm">
      Already have an account? 
      <a href="/login" class="text-accent-3 font-semibold hover:underline">Login</a>
    </p>
  </div>
</div>
` }) %>
